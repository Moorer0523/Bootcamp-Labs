@model List<Movie>

@if(Model.Count == 0)
{
    <p>No movies found</p>
}
else
{
    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-3">
                <div class="card">
                    <img class="card-img-top" src="@movie.Poster">
                    <div class="card-body">
                        <h5 class="card-title">@movie.Title</h5>
                        <p class="card-text">@movie.imdbID</p>
                    </div>
                </div>
            </div>
        }
    </div>
}